@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to ArtShop</h1>
</div>

<section class="bg-opacity-10 py-3">
    <div class="container">
        <div class="row justify-content-center">
            <p class="lead text-center col-md-9 col-lg-7 display-6">
                Shop original art from independent artists around the world.
            </p>
        </div>
    </div>
</section>



<section class="bg-transparent py-5">
    <div class="container">
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-md-4 text-center">
                            <i class="bi bi-image bi-3x"></i>
                            <h4 class="mt-3">Authentic, hand-crafted art</h4>
                            <p>Shop original, unique and affordable art from thousands of artists around the world.</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-md-4 text-center">
                            <i class="bi bi-person bi-3x"></i>
                            <h4 class="mt-3">Support independent artists</h4>
                            <p>Buy directly from an artist, helping them to make a living doing what they love.</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-md-4 text-center">
                            <i class="bi bi-truck bi-3x"></i>
                            <h4 class="mt-3">Risk-free shopping</h4>
                            <p>Secure transactions, free 14-day returns. Full peace of mind, guaranteed.</p>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>
